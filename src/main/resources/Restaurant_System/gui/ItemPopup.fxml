<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 15, 0, 0, 0);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Restaurant_System.gui.ItemPopupController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>

      <VBox alignment="CENTER" prefHeight="360.0" prefWidth="250.0">
         <children>
            <ImageView fx:id="popupImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>

      <VBox prefHeight="360.0" prefWidth="300.0" spacing="10.0" HBox.hgrow="ALWAYS">
         <children>

            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label fx:id="popupName" text="Item Name">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>

                  <Region HBox.hgrow="ALWAYS" />

                  <Button mnemonicParsing="false" onAction="#handleClose" style="-fx-background-color: transparent; -fx-text-fill: #999999; -fx-cursor: hand;" text="X">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Label fx:id="popupPrice" text="Rs. 0.00" textFill="#28a745">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>

            <Label fx:id="popupDescription" alignment="TOP_LEFT" prefHeight="60.0" prefWidth="280.0" text="Item Description goes here..." textFill="#666666" wrapText="true" />

            <Label text="Customize:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ScrollPane fitToWidth="true" prefHeight="120.0" style="-fx-background-color: transparent; -fx-border-color: transparent;">
               <content>
                  <VBox fx:id="optionsContainer" spacing="8.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>

            <VBox VBox.vgrow="ALWAYS" />

            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>

                  <HBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 5;">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleMinus" style="-fx-background-color: transparent; -fx-cursor: hand;" text="-">
                           <font><Font name="System Bold" size="14.0" /></font>
                        </Button>
                        <Label fx:id="quantityLabel" text="1">
                           <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#handlePlus" style="-fx-background-color: transparent; -fx-cursor: hand;" text="+">
                           <font><Font name="System Bold" size="14.0" /></font>
                        </Button>
                     </children>
                  </HBox>

                  <Button fx:id="confirmButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleConfirm" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;" text="Confirm Order" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>

         </children>
      </VBox>
   </children>
</HBox>